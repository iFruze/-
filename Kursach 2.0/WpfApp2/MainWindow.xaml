<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="TeachTracker" Height="400" Width="500" ResizeMode="NoResize">
    <Grid Cursor="">
        <Label Content="Label" HorizontalAlignment="Left" Margin="490,251,0,0" VerticalAlignment="Top"/>
        <TabControl>
            <TabItem Header="Авторизация">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#FFF0F0F0"/>
                        <GradientStop Color="Red" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Background="#FFB4BEBE">

                    <Label Content="Авторизация" HorizontalAlignment="Left" Margin="174,73,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Georgia" Height="37" Width="152" FontSize="20"/>
                    <TextBox MouseDoubleClick="AuthLogTextBox_Click" Name="AuthLogText_Box" HorizontalAlignment="Left" Margin="134,118,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="232" Height="24" FontSize="14"/>
                    <Button  Content="Войти" HorizontalAlignment="Left" Margin="170,214,0,0" VerticalAlignment="Top" Width="160" Click="AuthButton_Click" Height="28" FontFamily="Arial" FontSize="16"/>
                    <PasswordBox MouseDoubleClick="AuthPasTextBox_Click" Name="AuthPasText_Box" HorizontalAlignment="Left" Margin="134,0,0,0" VerticalAlignment="Center" Width="232" Height="24"/>
                    <Label Content="Логин:" HorizontalAlignment="Left" Margin="84,117,0,0" VerticalAlignment="Top"/>
                    <Label Content="Пароль:" HorizontalAlignment="Left" Margin="76,155,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="Регистрация">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Регистрация" HorizontalAlignment="Left" Margin="182,70,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Arial Black" Height="31" Width="160" FontSize="20"/>
                    <TextBox MouseDoubleClick="RegLog_Click" Name="RegLogText_Box" HorizontalAlignment="Left" Margin="149,126,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="232" Height="24" FontSize="14"/>
                    <Button Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="163,253,0,0" VerticalAlignment="Top" Width="204" Click="RegButton_Click" FontFamily="Arial" FontSize="16" Height="30"/>
                    <Label Content="Логин:" HorizontalAlignment="Left" Margin="98,125,0,0" VerticalAlignment="Top"/>
                    <Label Content="Пароль:" HorizontalAlignment="Left" Margin="91,167,0,0" VerticalAlignment="Top"/>
                    <Label Content="Повторите пароль:" HorizontalAlignment="Left" Margin="32,208,0,0" VerticalAlignment="Top"/>
                    <PasswordBox MouseDoubleClick="RegPas1_Click" Name="FirstRegPasText_Box" HorizontalAlignment="Left" Margin="150,168,0,0" VerticalAlignment="Top" Width="232" Height="25"/>
                    <PasswordBox MouseDoubleClick="RegPas2_Click" Name="SecondRegPasText_Box" HorizontalAlignment="Left" Margin="150,210,0,0" VerticalAlignment="Top" Width="232" Height="24"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
